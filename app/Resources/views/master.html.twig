<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {% block meta %}{% endblock %}

        {% block style %}
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('build/global.css') }}"/>
        {% endblock %}
    </head>
<body>
    <header>
        {% block header %}
            <a href="#" target="_blank" class="logo" >
                <img src="/build/images/sulu.png">
            </a>
            <nav>
                <ul>
                    <li><a href="{{ sulu_content_root_path() }}">Homepage</a></li>
                    {% for item in sulu_navigation_root_tree('main') %}
                        <li><a href="{{ sulu_content_path(item.url) }}" title="{{ item.title }}">{{ item.title }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>
            <div class="clear"></div>
        {% endblock %}
        <!--
        <div class="search">
            <form action="{# path('sulu_search.website_search') #}" method="GET">
                <input name="q" type="text" placeholder="Search"/>
                <input type="submit" value="Go"/>
            </form>
        </div>
         -->
    </header>

    <section id="content" vocab="http://schema.org/" typeof="Content">
        {% block content %}{% endblock %}
    </section>

    <aside>
        {% block aside %}{% endblock %}
    </aside>

    <footer>
        {% block footer %}
            <div class="copyRight"></div>
            <p class="cp">Copyright {{ 'now'|date('Y') }} SULU</p>
        {% endblock %}
    </footer>

    {% block javascripts %}
    {% endblock %}
</body>
</html>
